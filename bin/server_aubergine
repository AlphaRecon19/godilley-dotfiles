#!/bin/zsh

tty=
tty -s && tty=--tty
docker run \
    $tty \
    --rm \
    -it \
    -e APPLICATION_ENV="development" \
    --net=host \
    --init \
    --user $(id -u):$(id -g) \
    --volume /home/george/git/aubergine/aubergine:/var/www/html \
    --workdir /var/www/html  \
    local/php:5.6 php -S 0.0.0.0:8080 -t public
